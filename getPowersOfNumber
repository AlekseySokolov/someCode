const getPowersOfNumber = (number, until) => {

 let result = [];

 result.push(1);
 result.push(number);

 let num = number;
 let counter = until;

  while(counter > 1) {
    num *= number;
    result.push(num);
    counter -= 1;
  };
  
 return result;
};

getPowersOfNumber(3, 3); => [ 1, 3, 9, 27 ];


