    value1: '123',
  },
  {
    id: 'h2',
    value1: '234',
  },
  {
    id: 'h3',
    value1: '456',
    value2: '43',
    value3: '12',
  }
];
const secondCollection = [
  {
    id: 'h1',
    value1: '678',
  },
  {
    id: 'h2',
    value1: '234',
    value2: '123',
  },
  {
    id: 'h3',
    value1: '56',
  },
  {
    id: 'h4',
    value4: '890',
  },
];
