  {
    id: 'h1',
    value1: '678',
  },
  {
    id: 'h2',
    value1: '234',
    value2: '123',
  },
  {
    id: 'h3',
    value1: '56',
    value2: '43',
    value3: '12',
  },
  {
    id: 'h4',
    value4: '890',
  },
];

console.log(
  `${JSON.stringify(answer)}` === `${JSON.stringify(getAggregateCollection(firstCollection, secondCollection))}`
);

